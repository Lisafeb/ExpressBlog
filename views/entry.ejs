<% include header %>
<div class="panel panel-default">

    <div class="panel-heading">

        <div class="text-muted pull-right">
            <%= entry.date %>
        </div>
        <%= entry.author %> :
        <%= entry.title %>
    </div>
    <div class="panel-body">
        <img class="img-responsive" src="<%= entry.image %>">
        <%= entry.body %>

        <div class="alertcontainer">
            <div class="row">Â </div>
