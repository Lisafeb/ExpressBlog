    <div class="panel-heading">

        <div class="text-muted pull-right">
            <%= entry.date %>
        </div>
        <%= entry.author  %> <i> posted this: </i>  <a class="btn btn-default" href="blogs/<%= entry._id %>"> <%= entry.title %></a>
    </div>
    <div class="panel-body">
        <%= entry.body %>

        <div>

        </div>
    </div>
</div>
<% }) %>

<% } else { %>   No entries! <a href="/new-entry">Add entry!</a>
