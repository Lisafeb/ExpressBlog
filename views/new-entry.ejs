<head>
    <meta charset="utf-8">
    <title>Express Blog</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<div class="alertcontainer">
    <div class="row">Â </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="alert alert-info alert-labeled">
                <div class="alert-labeled-row">
                    <span class="alert-label alert-label-left alert-labelled-cell">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </span>
                    <p class="alert-body alert-body-right alert-labelled-cell">
                       Write a new entry.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-8">
                <form action="/blogs"  id="contactform" name="contactform" class="contact-form clearfix" method="POST">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="author">User name</label>
                                <% if(currentUser){ %>
                                <input type="text"class="form-control input-lg"  id="author" name="author"  value= <%= currentUser.username%> readonly>
                                <% } else { %>
                                <input type="text" class="form-control input-lg"  id="author" name="author" placeholder= "Register or Log In to add a blogpost">
                                <% } %>
                                </div>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control input-lg"  id="title" name="title" placeholder="Entry title" required>
                            </div>
                            <div class="form-group">
                                <label for="body">Add an image URL</label>
                                <input type="text" class="form-control input-lg" id="image" name="image" placeholder="Insert an image URL" rows="3" required></input>
                            </div>
                        </div>
                        <div class="col-md-7">

                <div class="form-group">
                    <label for="body">Entry text</label>
                    <textarea cols="6" rows="8"  class="form-control input-lg" id="body" name="body" placeholder="What would you like to share with the community?" rows="3" required></textarea>
                </div>
                        </div>
                    </div>
                <div class="form-group">
                    <input type="submit" value="Post entry" class="btn btn-primary btn-lg pull-right">
                </div>
            </form>
            </div>
        </div>
    </div>
</div>
<% include footer %>
